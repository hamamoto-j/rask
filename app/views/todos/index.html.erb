<p id="notice"><%= notice %></p>

<h1>Todo一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>内容</th>
      <th>締切</th>
      <th>親Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.where(done_flag: false).each do |todo| %>
      <tr>
        <td><%= todo.name %></td>
        <td><%= todo.description %></td>
        <td><%= todo.due_date %></td>
        <td><%= Project.find(todo.project_id).name %></td>
        <td><%= link_to "Show", todo %></td>
        <td><%= link_to "Edit", edit_todo_path(todo) %></td>
        <td><%= link_to "Destroy", todo, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

