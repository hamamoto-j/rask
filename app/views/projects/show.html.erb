<p id="notice"><%= notice %></p>
<h1>Project詳細</h1>
<p>
  <strong>名前:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>内容:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Todo:</strong>
  <% @project.todos.each do |todo| %>
  <%= link_to todo.name, todo %>
  <% end %>
</p>

<p>
  <strong>メンバ:</strong>
  <% @project.todos.select(:user_id).distinct.each do |todo| %>
  <%= link_to User.find_by(id: todo.user_id).name, User.find_by(id: todo.user_id) %>
  <% end %>
</p>


<%= link_to "Edit", edit_project_path(@project) %> |
<%= link_to "Back", projects_path %>
